<h2>Todos list</h2>

{{#if todos.length}}
<ul>
    {{#each todos}}
    {{!-- each x got id, title, completed --}}
    <li class="todo">
        <label>

            {{#if completed}}
                <input type="checkbox" checked>
                <span class="completed">{{ title }}</span>
            {{else}}
                <input type="checkbox">
                <span>{{ title }}</span>
            {{/if}}

            <button class="btn btn-small">Save</button>
        </label>
    </li>
    {{/each}}
</ul>     
{{else}}
<p>Nothing, lol.</p>
{{/if}}